{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "conventionalCommits": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "npmClient": "npm"
    }
  },
  "changelog": {
    "labels": {
      "feat": "New Feature",
      "fix": "Bug Fix",
      "docs": "Documentation",
      "types": "Types",
      "perf": "Performance",
      "refactor": "Refactor"
    }
  }
}
